<!DOCTYPE html">
<html>
  <head>
    <title>Todo for RubyGarage</title>
    <%= stylesheet_link_tag 'sample', 'facebox' %>
    <%= javascript_include_tag 'jquery.min', 'jquery-ui-1.8.11.custom.min', 'rails', 'application', 'facebox' %>
    <%= csrf_meta_tag %>
    <%= yield :javascript %>
  </head>
  <body>
    <div id="header">

      <%= link_to 'PROJECTS', projects_path %>

    </div>
    <% [:notice, :error, :message].each do |key| %>
      <% unless flash[key].blank? %>
        <div id="flash">
          <div id="flash <%= key %>">
            <%= flash[key] %>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
