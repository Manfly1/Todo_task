<%= render 'js_content' %>
<hr>
<%= render 'tasks/form' %>
<hr/>
<h2>
  <%= @project.title %>
</h2>
<p class="description">
  <%= @project.description %>
  <%= link_to 'Notes', project_notes_path(@project) %>
</p>
<h3>Stuff To Do</h3>
<ul id="tasks">
  <% @incomplete_tasks.each do |task| %>
    <%= render :partial => 'tasks/task', :locals => {:task => task} %>
  <% end %>
</ul>

<h3>Completed</h3>
<ul id="completed">
  <% @completed_tasks.each do |task| %>
    <%= render :partial => 'tasks/completed_tasks', :locals => {:task => task} %>
  <% end %>
</ul>
