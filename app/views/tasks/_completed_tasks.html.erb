<li class="completed" id="task_<%= task.id %>">
  <%= task.description %>
  <%= link_to image_tag('cross.png'), project_task_path(task.project, task), :method => :delete, :remote => true %>
  <%= link_to image_tag('undo.png'),  retask_task_path(task.project, task), :method => :post, :remote => true %>
</li>
